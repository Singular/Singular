        attrib(I,"isSB",1);
        K=subst(select(I,n+1),x(n),1);
        K=K*maxideal(maxdeg1(I));
        if (size(reduce(K,I,5)) == 0)
        {
          break;
        }
      }
    }
    h=maxdeg1(simplify(reduce(quotient(I,maxideal(1)),I),2))+1;
    list l8;
    for ( ii = n; ii> n-d+1; ii-- )
    {
      l8=list();
      sbi=subst(sbi,x(ii),0);
      for (zz = 0; zz<= ii-1; zz++)
