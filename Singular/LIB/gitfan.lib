proc afacesPart(ideal a, int d, int start, int end, int r){
  intvec gam0;
  int i;
  list AF;

  for(i = start; i <= end; i++){
    if(i < 2^r){
      gam0 = int2face(i,r);

      // take gam0 only if it has
      // at least d rays:
      if(size(gam0) >= d){
        if (isAface(a,gam0)){
          AF[size(AF) + 1] = gam0;
        }
      }
    }
  }

  return(AF);
}

