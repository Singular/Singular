proc GetGroup(list GRP)
{ list L;
  int i,j,k;
  intvec fix;
  for (i=1;i<=size(GRP);i++)
  { L[i] = GetMatrix(GRP[i]);
// Fixelemente des Zyklus
    fix = intvec(0);
    fix[nvars(basering)]=0;
    for (j=1;j<=size(GRP[i]);j++)
    { for (k=1;k<=size(GRP[i][j]);k++)
      { fix[GRP[i][j][k]]=1;
      }
