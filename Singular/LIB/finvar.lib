static proc GetMatrix(list GEN)
{ matrix M[nvars(basering)][nvars(basering)];
  int i,j;
  for (i=1;i<=size(GEN);i++)
  { for (j=1;j<size(GEN[i]);j++)
    { M[GEN[i][j+1],GEN[i][j]] = 1;
    }
    M[GEN[i][1],GEN[i][size(GEN[i])]] = 1;
  }
  return(M);
}

