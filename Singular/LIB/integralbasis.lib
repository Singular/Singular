// Input:  a polynomial f.
// Output: an integer k = the order of f (that is, the smallest exponent of f
//         as poly in the first variable).
static proc orderExp(poly f){
  if(f == 0)
  {
    return(-1);
  } else
  {
    matrix co = coeffs(f, var(1));
    int k = 1;
    while(co[k, 1] == 0){
      k++;
    }
    k--;
  }
  return(k);
}

