      {
        // We recompute up to the appropiate order for merging
        poly I2Red = reduce(I2Lifted[i], var(1)^(degExpand+1));

        //"Computing Puiseux expansions up to degree degExpand of factor ", i, ": ", I2Red;

        newL = puiseux(I2Red, degExpand, 1);
