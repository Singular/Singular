{
  if(typeof(cl[1]) == "ring")
  {
    def S = cl[1];
    setring S;
    list clVec = PE[1][6];
  } else
  {
    list clVec = cl[1][6];
  }
  return(clVec);
}

static proc setClassVector(list cl, list clVec);
{
  def R = basering;
  int i, j;
  for(i = 1; i <=size(cl); i++)
  {
    if(typeof(cl[i]) == "ring")
    {
      def S = cl[i];
      setring S;
      for(j = 1; j <= size(PE); j++)
      {
        PE[j][6] = clVec;
      }
      setring R;
      kill S;
    } else
    {
      for(j = 1; j <= size(cl); j++)
      {
        cl[j][6] = clVec;
      }

    }
  }
  return(cl);
}

