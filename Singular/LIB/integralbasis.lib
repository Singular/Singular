// Given two intvecs, both ordered for lowest to highest, it return
// a new intvec containing the union of both intvecs, ordered from lowest
// to highest.
static proc appendIntvecs(intvec a, intvec b)
{
  intvec c;
  int indA = 1;
  int indB = 1;
  int indC = 1;
  int last = -1;
  while((indA <= size(a)) and (indB <= size(b)))
  {
    if(a[indA] < b[indB]){
      if(a[indA] > last)
      {
        c[indC] = a[indA];
        last = c[indC];
        indC++;
      }
      indA++;
    } else {
      if(b[indB] > last)
      {
        c[indC] = b[indB];
        last = c[indC];
        indC++;
      }
      indB++;
    }
  }
  while(indA <= size(a))
  {
    if(a[indA] > last)
    {
      c[indC] = a[indA];
      last = c[indC];
      indC++;
    }
    indA++;
  }
  while(indB <= size(b))
  {
    if(b[indB] > last)
    {
      c[indC] = b[indB];
      last = c[indC];
      indC++;
    }
    indB++;
  }
  return(c);
}


