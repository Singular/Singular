static proc Z_phi(ideal I)
{
  poly f;
  for(int i=1; i<= ncols(I); i++)
{
    f = f+I[i]*@y^(i-1);
  }
  return(f);
}

static proc Z_default_ideal(int number_of_variables, int q)
{
  ideal DI;
  for(int i=1; i<=number_of_variables; i++)
  {
    DI[i] = var(i)^q-var(i);
  }
  return(std(DI));
}
