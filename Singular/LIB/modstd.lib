proc primeTest(ideal I, bigint p)
{
   int i,j;
   for(i = 1; i <= size(I); i++)
   {
      for(j = 1; j <= size(I[i]); j++)
      {
         if((leadcoef(I[i][j]) mod p) == 0) { return(0); }
      }
   }
   return(1);
}

